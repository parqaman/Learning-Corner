{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start-dev": "tsc-watch --onSuccess \"node ./dist/index.js\"",
    "start": "tsc && node ./dist/index.js",
    "start:ci": "node ./dist/index.js",
    "build": "tsc",
    "schema:fresh": "npx mikro-orm schema:fresh -r",
    "test": "mocha -r ts-node/register test/*.test.ts --reporter mochawesome --reporter-options reportDir=test/reports,reportFilename=test-results",
    "test:ci": "concurrently --kill-others \"npm run start:ci\" \"npm run test:junit\"",
    "test:junit": "mocha -r ts-node/register test/*.test.ts --reporter mocha-junit-reporter --close",
    "lint": "tslint --project .",
    "lint:fix": "tslint --project . --fix"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@mikro-orm/core": "^5.6.0",
    "@mikro-orm/postgresql": "^5.6.0",
    "bcrypt": "^5.1.0",
    "express": "^4.18.2",
    "jsonwebtoken": "^8.5.1",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.1",
    "socket.io": "^4.5.4",
    "uuid": "^9.0.0",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@mikro-orm/cli": "^5.6.0",
    "@mikro-orm/seeder": "^5.6.0",
    "@types/bcrypt": "^5.0.0",
    "@types/chai": "^4.3.4",
    "@types/express": "^4.17.14",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/mocha": "^10.0.1",
    "@types/multer": "^1.4.7",
    "@types/nodemailer": "^6.4.7",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.0",
    "chai": "^4.3.7",
    "concurrently": "^7.6.0",
    "mocha": "^10.2.0",
    "mochawesome": "^7.1.3",
    "supertest": "^6.3.3",
    "mocha-junit-reporter": "2.2.0",
    "prettier": "^2.8.3",
    "ts-node": "^10.9.1",
    "tsc-watch": "^6.0.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.3.0",
    "tslint-etc": "^1.13.10",
    "typescript": "^4.9.4"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/mikro-orm.config.ts",
      "./dist/mikro-orm.config.js"
    ]
  }
}
